.main-section
  background-image: url("../images/main-section-bg.jpg")
  background-repeat: no-repeat
  background-position: center
  background-size: cover

  &__container
    position relative
    z-index 1
    padding: 20px 0 0 0
    +above($breakpoints.md)
      padding: 43px 0 120px 0
      &:after
        content: ""
        position: absolute
        z-index -1
        transform: rotate(20deg)
        border-radius: 100%;
        background-color: #2e2e2f;
        filter: blur(25px);
        width 885px
        height: 587px
        top: 74px;
        left: -274px;

  &__title
    padding: 20px 0 20px 0
    text-align: center
    +above($breakpoints.md)
      padding: 37px 0 58px 0
      text-align: start

  &__form-block
    width 100%
    margin 0 auto
    max-width: 460px
    background-color #fff
    padding 10px
    border-radius: 10px
    +above($breakpoints.sm)
      padding 20px
    +above($breakpoints.md)
      margin 0

    &-text
      color: black
      text-align: center
      padding-bottom 10px
      +above($breakpoints.sm)
        padding-bottom 20px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    justify-content center
    gap: 10px
    +above($breakpoints.sm)
      gap: 20px

  &__adaptive
    width 100%
    display: flex
    flex-direction: column
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 20px

  &__image
    width 300px
    height: auto
    margin: 0 auto
    padding-top 20px
    +above($breakpoints.md)
      position: absolute
      width 500px
      bottom: 0
      right: 0
    +above($breakpoints.xxl)
      z-index -1
      width 620px
      height: 702px
      bottom: 0
      right: -65px

  &__bottom
    width 100%
    background-color $color-black
    padding 20px
    +above($breakpoints.sm)
      padding 30px

  &__inner
    width 100%
    max-width: 934px
    margin 0 auto
    text-align: center
    display: flex
    flex-direction: row
    justify-content space-between
    line-height: 120%

  &__item
    +above($breakpoints.sm)
      width 190px !important

  &__number
    margin: 0 auto 10px auto
    width 40px
    height: 40px
    border-radius: 50%
    display: flex
    align-items: center
    justify-content center
    background-color $main-red