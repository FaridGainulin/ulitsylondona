.thanks-section
  height: 100%
  display: flex
  flex-direction: column
  justify-content center
  align-items: center

  &__container
    max-width: 720px
    margin: 0 auto
    text-align: center

  &__inner-text
    padding: 20px 0 40px 0

  &__container a
    max-width 300px
    margin: 0 auto

  &__header
    padding 32px 0

  &__text
    width 150px
    padding-left 10px
    border-left: 1px solid rgb(255, 255, 255)
    color: rgb(255, 255, 255)
    +above($breakpoints.sm)
      width 170px
      padding-left 25px

.thanks-page
  background-image: url("../images/main-section-bg.jpg")
  background-repeat: no-repeat
  background-position: center
  background-size: cover

  &__header,
  &__footer
    padding 20px 0
    +above($breakpoints.md)
      padding 43px 0
